<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Select an Enterprise
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Please choose the enterprise you wish to access.
      </p>
    </div>
    <div class="mt-8 space-y-4">
      <% @enterprises.each do |enterprise| %>
        <%= button_to select_enterprise_path(enterprise), method: :post, class: "group relative w-full flex justify-center py-4 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <%= enterprise.name %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
