<% content_for :page_title, "Proveedores" %>

<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-end gap-3 mb-6">
    <% if policy(Provider).create? %>
      <%= link_to new_bulk_import_path(resource_type: "Provider"), class: "btn-secondary inline-flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
        Importar
      <% end %>
      <%= link_to new_provider_path, class: "btn-primary inline-flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg>
        Agregar Proveedor
      <% end %>
    <% end %>
  </div>

  <% if @providers.any? %>
    <div class="card overflow-hidden p-0">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-border">
          <thead class="bg-muted/50">
            <tr>
              <th class="table-th text-left">Proveedor</th>
              <th class="table-th text-left">RUC/DNI</th>
              <th class="table-th text-left">Email</th>
              <th class="table-th text-left">Telefono</th>
              <th class="table-th"><span class="sr-only">Acciones</span></th>
            </tr>
          </thead>
          <tbody class="bg-card divide-y divide-border">
            <% @providers.each do |provider| %>
              <tr class="hover:bg-muted/30 transition-colors">
                <%= table_cell_primary(provider.name, nil, provider) %>
                <%= table_cell_code(provider.tax_id) %>
                <%= table_cell(provider.email.presence || "-") %>
                <%= table_cell(provider.phone_number.presence || "-") %>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end gap-1">
                    <%= link_to provider, class: "table-action-btn", title: "Ver" do %>
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                    <% if policy(provider).update? %>
                      <%= link_to edit_provider_path(provider), class: "table-action-btn", title: "Editar" do %>
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                    <% end %>
                    <% if policy(provider).destroy? %>
                      <%= button_to provider, method: :delete, class: "table-action-btn-danger", title: "Eliminar", data: { turbo_confirm: "Â¿Estas seguro de eliminar este proveedor?" } do %>
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @pagy.pages > 1 %>
        <div class="px-6 py-4 border-t border-border bg-muted/30">
          <%= render "shared/table/pagination", pagy: @pagy %>
        </div>
      <% end %>
    </div>
  <% else %>
    <%= render "shared/table/empty_state",
      icon: :truck,
      title: "No hay proveedores",
      description: "Comienza agregando tu primer proveedor.",
      action_path: new_provider_path,
      action_label: "Nuevo Proveedor",
      show_action: policy(Provider).create? %>
  <% end %>
</div>
