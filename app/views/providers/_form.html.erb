<%= form_with model: provider, class: "space-y-8", local: true do |f| %>
  <% if provider.errors.any? %>
    <div class="alert-error">
      <h3 class="text-sm font-medium">Se encontraron errores:</h3>
      <div class="mt-2 text-sm">
        <ul role="list" class="list-disc space-y-1 pl-5">
          <% provider.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="card">
    <h3 class="text-lg font-medium leading-6 text-foreground">Informacion del Proveedor</h3>
    <p class="mt-1 text-sm text-muted-foreground">Datos principales del proveedor.</p>

    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">

      <div class="sm:col-span-4">
        <%= f.label :name, "Nombre del Proveedor", class: "form-label" %>
        <%= f.text_field :name, class: "form-input", required: true, placeholder: "Ej: Distribuidora ABC" %>
      </div>

      <div class="sm:col-span-2">
        <%= f.label :tax_id, "RUC", class: "form-label" %>
        <%= f.text_field :tax_id, class: "form-input", placeholder: "Opcional" %>
        <p class="mt-1 text-xs text-muted-foreground">11 digitos</p>
      </div>

    </div>
  </div>

  <div class="card">
    <h3 class="text-lg font-medium leading-6 text-foreground">Informacion de Contacto</h3>
    <p class="mt-1 text-sm text-muted-foreground">Datos para comunicarte con el proveedor.</p>

    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">

      <div class="sm:col-span-3">
        <%= f.label :email, "Correo Electronico", class: "form-label" %>
        <%= f.email_field :email, class: "form-input", placeholder: "proveedor@ejemplo.com" %>
      </div>

      <div class="sm:col-span-3">
        <%= f.label :phone_number, "Numero de Telefono", class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-input", placeholder: "987654321" %>
        <p class="mt-1 text-xs text-muted-foreground">Formato: 9 digitos para celular</p>
      </div>

    </div>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "Cancelar", providers_path, class: "btn-secondary" %>
    <%= f.submit provider.persisted? ? "Actualizar Proveedor" : "Crear Proveedor", class: "btn-primary cursor-pointer" %>
  </div>
<% end %>
