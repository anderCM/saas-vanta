<%
  resource_labels = {
    "Product" => "Productos",
    "Provider" => "Proveedores",
    "Customer" => "Clientes"
  }
  resource_label = resource_labels[@resource_type] || @resource_type
%>

<% content_for :page_title, "Historial de Importaciones" %>

<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-foreground">Historial de Importaciones</h1>
      <p class="mt-1 text-sm text-muted-foreground">
        <%= resource_label %>
      </p>
    </div>
    <%= link_to new_bulk_import_path(resource_type: @resource_type),
                class: "btn-primary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
      </svg>
      Nueva Importacion
    <% end %>
  </div>

  <%# Tabs for resource type %>
  <div class="border-b border-border mb-6">
    <nav class="-mb-px flex space-x-8">
      <%= link_to bulk_imports_path(resource_type: "Product"),
                  class: "pb-4 px-1 border-b-2 font-medium text-sm #{@resource_type == 'Product' ? 'border-primary text-primary' : 'border-transparent text-muted-foreground hover:text-foreground hover:border-border'}" do %>
        Productos
      <% end %>
      <%= link_to bulk_imports_path(resource_type: "Provider"),
                  class: "pb-4 px-1 border-b-2 font-medium text-sm #{@resource_type == 'Provider' ? 'border-primary text-primary' : 'border-transparent text-muted-foreground hover:text-foreground hover:border-border'}" do %>
        Proveedores
      <% end %>
      <%= link_to bulk_imports_path(resource_type: "Customer"),
                  class: "pb-4 px-1 border-b-2 font-medium text-sm #{@resource_type == 'Customer' ? 'border-primary text-primary' : 'border-transparent text-muted-foreground hover:text-foreground hover:border-border'}" do %>
        Clientes
      <% end %>
    </nav>
  </div>

  <% if @bulk_imports.any? %>
    <div class="card overflow-hidden p-0">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-border">
          <thead class="bg-muted/50">
            <tr>
              <th class="table-th text-left">Fecha</th>
              <th class="table-th text-left">Usuario</th>
              <th class="table-th text-left">Archivo</th>
              <th class="table-th text-center">Estado</th>
              <th class="table-th text-center">Exitosos</th>
              <th class="table-th text-center">Fallidos</th>
              <th class="table-th"><span class="sr-only">Acciones</span></th>
            </tr>
          </thead>
          <tbody class="bg-card divide-y divide-border">
            <% @bulk_imports.each do |import| %>
              <tr class="hover:bg-muted/30 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">
                  <%= import.created_at.strftime("%d/%m/%Y %H:%M") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">
                  <%= import.user.first_name %> <%= import.user.first_last_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
                  <%= import.original_filename || "Sin nombre" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <%= render_import_status_badge(import.status) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-center">
                  <span class="text-green-600 dark:text-green-400 font-medium">
                    <%= import.successful_rows %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-center">
                  <span class="<%= import.failed_rows > 0 ? 'text-red-600 dark:text-red-400 font-medium' : 'text-muted-foreground' %>">
                    <%= import.failed_rows %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                  <%= link_to bulk_import_path(import), class: "table-action-btn", title: "Ver detalles" do %>
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @pagy.pages > 1 %>
        <div class="px-6 py-4 border-t border-border bg-muted/30">
          <%= render "shared/table/pagination", pagy: @pagy %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card text-center py-12">
      <svg class="mx-auto h-12 w-12 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-foreground">No hay importaciones</h3>
      <p class="mt-1 text-sm text-muted-foreground">Realiza tu primera importacion masiva.</p>
      <div class="mt-6">
        <%= link_to new_bulk_import_path(resource_type: @resource_type),
                    class: "btn-primary inline-flex items-center" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
          </svg>
          Nueva Importacion
        <% end %>
      </div>
    </div>
  <% end %>
</div>
